.canvas {
    width: 320px;
    height: 284px;
    /* transform: scale(0.5); */
    margin: 0 auto;
}
.content{
  width:710rpx;
  height:380rpx;
  background:rgba(255,255,255,1);
  border-radius:5px;
  box-shadow:2px 0px 10px rgba(0,0,0,0.1);
  margin: 20rpx auto;
}
.message,.title{
  margin-left: 30rpx;
}
.title{
  width:117rpx;
  height:29rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  color:rgba(51,51,51,1);
  line-height:72rpx;
  margin-bottom: 50rpx;
}
.message{
  width:262rpx;
  height:263rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(102,102,102,1);
}
.message view{
  margin-bottom:18rpx;
}
.wrapper{
  width:626rpx;
  height:29rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
  line-height:24rpx;
  margin-left: 31rpx;
  margin-top: 32rpx;
}
.lawyer-key-msg,.area-msg,.trial-court-msg,.program-msg,.doc-msg,.case-type-msg,.case-msg,.court-msg{
  margin-left: 30rpx;
  margin-top: 30rpx;
  width:238rpx;
  height:29rpx;
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  color:rgba(51,51,51,1);
  line-height:24rpx;
}
.lawyer-key-key,.area-key,.trial-court-key,.program-key,.doc-key,.case-type-key,.case-key,.court-key{
  text-align: center;
  font-size:24rpx;
  font-family:PingFangSC-Semibold;  
  color:rgba(51,51,51,1);  
}

.footer{
  margin: 38rpx 30rpx 35rpx 30rpx;
}
.btn{
  margin: 35rpx auto;
  width:200rpx;
  height:90rpx;
  background:rgba(87,126,255,1);
  border-radius:5px;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}
