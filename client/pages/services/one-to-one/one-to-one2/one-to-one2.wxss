.banner image{
  width: 100%;
  height: 260rpx;
  display: block;
}
.bannerword{
  width: 100%;
  height: 260rpx;
  position: absolute;
  top:0rpx;
  left: 0rpx;
  line-height: 260rpx;
  text-align: center;
  color: #fff;
  font-size: 60rpx;
  font-weight: 700;
}
.title,.title2{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
  font-size:32rpx; 
}
.title2{
  font-size:36rpx; 
  font-weight: 600;
}
.oradio{
  padding: 20rpx;
}
.UnionPaybox{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.oUnionPay{
  width: 328rpx;
  height: 90rpx;
  margin: 20rpx 22rpx;
  background-color: #577eff;
  line-height: 90rpx;
  color: #fff;
  text-align: center;
  border-radius: 12rpx;
}
.onext{
  display: flex;
  justify-content: space-between;
}
.Previous,.nextpage{
  margin: 20rpx;
}
.shade{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  background-color: #000;
  opacity: .5;
}
.prompt{
  width: 500rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 8rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -100rpx 0 0 -250rpx;
}
.protitle{
  width: 100%;
  text-align: center;
  font-weight: 500;
  margin: 20rpx 0rpx;
}
.close{
  width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #577eff;
  color: #fff;
  border-radius: 12rpx;
  margin: auto;
  font-size: 32rpx;
}