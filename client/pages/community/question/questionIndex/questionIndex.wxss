/* pages/community/question/questionIndex/questionIndex.wxss */
/* 菜单 */
.menu{
  width: 100%;
  margin-bottom: 22rpx;
}
.cases{
  width: 25%;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  color: rgba(102,102,102,1);
  margin: 28rpx 0 0 0;
  box-sizing: border-box;
  border-right: 2rpx solid #999;
}
.cases:nth-child(4n){
  border: 0rpx;
}
.selected{
  color: #577EFF;
}
.boundary-line{
  width: 100%;
  height: 20rpx;
  background: #eee;
}
/* 悬浮按钮 */
.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #D79237;
    border-radius: 100%;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}
/* 问答列表 */
.all{
  display: none;
}
.case-list{
  width: 100%;
  height: 318rpx;
  padding: 30rpx 20rpx 0 20rpx;
  position: relative;
  box-sizing: border-box;
}
.nav-list{
  height: 318rpx;
}
.text{
  width: 558rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51,51,51,1);
}
.reward-money{
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51,51,51,1);
  position: absolute;
  top: 35rpx;
  right: 19rpx;
}
.lawyer,.firm{
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(153,153,153,1);
  position: absolute;
  top: 155rpx;
}
.firm{
  left: 150rpx;
}
.logo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 208rpx;
}
.logo image{
  width: 100%;
  height: 100%;
}
.listen{
  width: 230rpx;
  height: 80rpx;
  position: absolute;
  top: 208rpx;
  left: 120rpx
}
.listen image{
  width: 100%;
  height: 100%;
}
.people-number{
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(153,153,153,1);
  position: absolute;
  top: 236rpx;
  right: 20rpx;
}
.bottom-line{
  width: 710rpx;
  height: 1rpx;
  background: #ddd;
  position: absolute;
  top: 317rpx;
}