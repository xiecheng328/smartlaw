/* pages/community/appointment_content/appointment_content.wxss */
.zx-list{
font-size: 24rpx;
font-family:PingFangSC-Regular;
color:rgba(51,51,51,1);
width:710rpx;
height:60rpx;
line-height: 60rpx;
margin: 20rpx;
}
.zx-border{
  display: inline-block;
  border: 1rpx solid #DDDDDD;
  text-align: center;
  width:548rpx;
  height:60rpx;
  box-sizing: border-box;
}
.zx-text{
  display: inline-block;
  margin-right: 7rpx;
  width: 120rpx;
  vertical-align: top;
}
.section{
  display: inline-block
}
.zx-input{
  width: 548rpx;
  height: 60rpx;
  border:1rpx solid #DDDDDD; 
  box-sizing: border-box;
  display: inline-block
}
.zx-textarea{
  width: 710rpx;
  height: 300rpx;
  border: 1rpx solid #DDDDDD;
  margin-left: 20rpx;
}
.place-holder{
  font-size: 24rpx;
  color: #999999
}
.zx-button{
  background-color:#577eff;
  color: #ffff;
  margin-top: 100rpx;
}