/* pages/mine/paylist/payList.wxss */

page {
  background: #eee;
  font-size: 30rpx;
}

view {
  background: #fff;
}

.scroll-view_H {
  white-space: nowrap;
  display: flex;
}

.scroll-view-item_H {
  display: inline-block;
  width: 16%;
  margin: 0 20rpx 0 40rpx;
  box-sizing: border-box;
}

.list-liu {
  width: 100%;
  height: 85rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
  background: #fff;
}

.on {
  color: #577eff;
  border-bottom: 1rpx solid #577eff;
}

.list-liu .swiper-tab-list {
  text-align: center;
  line-height: 85rpx;
  font-size: 34rpx;
}

.kong {
  width: 100%;
  height: 85rpx;
}

.list {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #eee;
}

.list>view {
  display: flex;
  flex-direction: row;
}

.list image {
  width: 160rpx;
  height: 160rpx;
}

.list .list-top {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(221, 221, 221, 1);
}

.list .list-top .list-code {
  width: 302rpx;
  display: flex;
}

.list .list-middle {
  margin: 20rpx 0;
}

.list .list-bottom {
  display: flex;
  justify-content: space-between;
}


.btn-pay{
  position: absolute;
  margin: 0 20rpx;
  bottom: 20rpx;
  width: 710rpx;
  height: 90rpx;
  background: rgba(87, 126, 255, 1);
  border-radius: 5px;
  color: #fff;
}

.logistics{
  display: flex;
  flex-direction: column;
  width: 710rpx;
  margin: 20rpx auto;
}
.logistics-top{
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  text-align: center;
  margin: 0 20rpx;
  border-bottom: 1rpx solid rgba(221,221,221,1);
}
.logistics-list{
  box-sizing: border-box;
  height: 80rpx;
  margin-left: 23rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid rgba(221,221,221,1);
}