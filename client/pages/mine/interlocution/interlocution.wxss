/* title 标题 开始 */
page{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.title{
  width: 400rpx;
  height: 60rpx;
  display: flex;
  margin: 15rpx auto 15rpx;
  
  color: #577EFF;
  
  
}
.title view{
  font-size: 30rpx;
  /* flex-grow: 1; */
  width: 50%;
  line-height: 60rpx;
  text-align: center; 
  border: 1px solid#577Eff;
}
.title-question{
  border-radius: 5rpx 0 0 5rpx;
}
.title-answer {
  border-radius: 0 5rpx 5rpx 0;  
}
.selected{
  background: #577EFF;
  color: #fff;
}
