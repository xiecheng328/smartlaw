/* container 内容 开始 */
swiper{
  flex-grow: 1;
}
.container{
  background: #EEE;

  
}
.container-child{
  height: 270rpx;
  border-top: 1px solid #DDDDDD;
  background: #fff;
  margin-bottom: 20rpx;
}
.container-content{
  display: flex;
}
.container-content textarea{
  width: 548rpx;
  height:158rpx;
  background: #fff;
  margin: 20rpx 0 0 20rpx;
  overflow: hidden;
  border: 1px solid #DDDDDD;
  padding-left: 20rpx;
}
.container-content .textarea2{
  height:228rpx;
}
.container-content-textlist{
  display: flex;
  flex-direction: column;
  
}
.container-content-textlist view{
  color: #333333;
  /* width: 118rpx; */
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  margin:45rpx 20rpx 0 19rpx;
}
.container-content-textlist navigator{
  margin: 45rpx 20rpx 0 19rpx ;
  font-size: 30rpx; 
  color: #577EFF;
}
.holder-style{
  font-size: 24rpx;
  color: #333333;
  margin: 20rpx 0 0 20rpx;
  font-weight: 700;
}
.container-child-textlist{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}
.container-child-textlist view{
  margin: 30rpx 0 0 20rpx;
}
.container-child-textlist navigator{
  margin: 30rpx 20rpx 0 0 ;
  color: #577EFF;
}